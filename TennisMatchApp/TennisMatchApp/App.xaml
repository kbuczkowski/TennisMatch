    <Application.Resources>
        <Style
            x:Key="LightFrame"
            TargetType="materialFrame:MaterialFrame">
            <Setter Property="MaterialTheme" Value="Light"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Elevation" Value="6"/>
        </Style>

        <Style
            x:Key="PageStyle"
            TargetType="ContentPage">
            <Setter Property="BackgroundColor" Value="#EAEAEA"/>
        </Style>

        <Style
            x:Key="TitleText"
            TargetType="Label">
            <Setter Property="FontFamily" Value="OpenSans-ExtraBold.ttf#Open Sans"/>
            <Setter Property="FontSize" Value="Title"/>
            <Setter Property="TextColor" Value="Gray"/>
        </Style>

        <Style
            x:Key="SubTitleText"
            TargetType="Label">
            <Setter Property="FontFamily" Value="OpenSans"/>
            <Setter Property="FontSize" Value="Large"/>
            <Setter Property="TextColor" Value="Gray"/>
            <Setter Property="FontAttributes" Value="Bold"/>
        </Style>

        <Style
            x:Key="StatsText"
